<div class="container" style="z-index:-1; min-width:1200px;">
  <div class="col-xs-2" style=" overflow: hidden;top:100px; min-width: 350px; max-width: 400px;">
    <div class="panel panel-default" >
      <div class="panel-image hide-panel-body">
        <img src="/VibinLogo.jpg" class="panel-image-preview">
      </div>
        <div class="panel-footer">
          <div class="row">
            <div class="col-sm-2"> <img src="/VibinLogo.jpg" height="50px" width="50px" class="rounded-img home-avator">
            </div>
              <div class="col-sm-9">
                <h4 style="margin-left: 15px; position:absolute;"><%= current_user.username %></h4>
              </div>
                <div class="col-sm-12" style="margin-top: 10px;">
                  <div class="col-sm-6" style="font-size: 80%; opacity:0.7;"> POSTS <br>
                    <h6 style="color:green; font-size:250%;"><%= current_user.posts.count %>
                    </h6>
                  </div>
                    <div class="col-sm-6" style="font-size: 80%; opacity:0.7">FOLLOWERS<br>
                      <h6 style="color:green; font-size: 250%;"><%= current_user.followers.count %></h6>
                </div>
              </div>
            </div>
          </div>
        </div>
          <div class = "panel panel-default">
            <div class="panel-body">
              <h5 style="color:grey; font-size:125%;"> Trends </h5>
                  <a href="">Trend 1</a><br>
                  <span style="color:grey;"> 1000 Posts </span><br><br>
                  <a href="">Trend 2</a><br>
                  <span style="color:grey;"> 1000 Posts </span><br><br>
                  <a href="">Trend 3</a><br>
                  <span style="color:grey;"> 1000 Posts </span><br><br>
            </div>
          </div>
  </div>
          <div class="col-xs-5" style=" max-width: 400px; top:100px;">
            <%= render "/components/post_form" %><br><br>
              <% for @p in @posts %>
                <div class="panel panel-default">
                  <div class="panel-body row">
                    <div class="col-sm-1">
                      <img src="VibinLogo.jpg" class="rounded-img" height="50px" width="50px"></img>
                    </div>
                      <div class="col-sm-11">
                        <p class="post-title"><span class="post-owner"><%= User.find(@p.user_id).username %></span><span class="post-creation"> - <%= @p.created_at.to_formatted_s(:short) %></span></p>
                        <p class="post-content"><%= @p.content %></p>
                      </div>
                        <div class="col-sm-12">
                          <p class="post-links">
                             <button type="submit" class="btn btn-submit">
                            <span class="glyphicon glyphicon-comment g-links" aria-hidden="true"></span></button>
                            <span class="gylphicon glyphicon-lock g-links" aria-hidden="true"></span>
                            <span class="glyphicon gylphicon-heart g-links" aria-hidden="true"></span>
                            <span class="gylphicon gylphicon-option-horizontal g-links" aria-hidden="true"></span>
                              <a href="">View Comments</a>
                          </p>
                        </div>
                  </div>
                </div>
              <% end %>
                <div class="panel panel-default post-panel">
                  <div class="panel-body row">
                    <div class="col-sm-12">
                      <center><img src="/VibinLogo.jpg" height="25px" width="25px"></center></img>
                      <center><a href="#top"><p class="opacity: .7; color: grey;">Back to Top <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span></p></a></center>
                    </div>
                  </div>
                </div>
        </div>
      <div class="col-xs-2" style="top:100px; ">
        <div class="panel panel-default">
          <div class="panel-body">
             <h5 style="color: grey; font-size: 125%;">who to follow</h5>
               <% for @u in @toFollow do %>
                 <p style="font-weight: bold; opacity: 0.85;"><a href="/user/<%= @u.username %>"><%= @u.username %></a></p>
               <% end %>
         </div>
       </div>
        <div class="panel panel-default">
          <div class="panel-body">
            <p style="opacity: 0.5; font-size: 50%;"> About Help Blog Terms Privacy Â© 2018 Vibin
            </p>
          </div>
        </div>

</div>
</div>
